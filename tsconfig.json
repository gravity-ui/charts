{
  "extends": "@gravity-ui/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "outDir": "build/esm",
    "module": "esnext",
    "jsx": "react",
    "baseUrl": ".",
    "importHelpers": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "paths": {
      "~playwright/*": ["playwright/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "playwright/*"]
}
